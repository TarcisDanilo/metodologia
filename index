    <script>
        // Data for card borders
        const borderColors = {
            1: 'border-cyan-500',
            2: 'border-blue-600',
            3: 'border-emerald-500',
            4: 'border-indigo-600'
        };

        function showDetails(phaseNumber) {
            // Hide all detail panels and remove active borders
            for (let i = 1; i <= 4; i++) {
                const detailPanel = document.getElementById(`details-${i}`);
                const card = document.getElementById(`card-${i}`);
                
                if (detailPanel && card) {
                    detailPanel.classList.remove('visible-detail');
                    detailPanel.classList.add('hidden-detail');

                    Object.values(borderColors).forEach(colorClass => {
                        card.classList.remove(colorClass);
                    });
                    card.classList.add('border-transparent');
                }
            }

            // Show the selected detail panel
            const selectedPanel = document.getElementById(`details-${phaseNumber}`);
            if(selectedPanel) {
                selectedPanel.classList.remove('hidden-detail');
                selectedPanel.classList.add('visible-detail');
            }
            
            // Add active border to the selected card
            const selectedCard = document.getElementById(`card-${phaseNumber}`);
            if (selectedCard && borderColors[phaseNumber]) {
                 selectedCard.classList.remove('border-transparent');
                 selectedCard.classList.add(borderColors[phaseNumber]);
            }
            
            // Re-render icons for the whole page
            lucide.createIcons();
        }

        // Initial render for all icons and set default view
        document.addEventListener('DOMContentLoaded', (event) => {
            showDetails(1);
        });
    </script>
